<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_height="64dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/ivPoster"
            android:layout_weight="0" android:layout_width="64dp" android:paddingBottom="8dp"
            android:paddingTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTitle" android:layout_weight="1"
            android:layout_gravity="center_vertical"/>
</LinearLayout>